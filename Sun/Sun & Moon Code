function draw() {
  background("#2196F3");
 // drawCrescentMoon(crescentMoon)

//rectangle to cover half of canvas
fill ("#002366")
rect (0,0, width/2, height);

// grey rectangle for road
fill ("#616569")
rect (0,350,400,50);

// cresent moon in top left corner
//createCrescentMoon (50, 50);
  
// sun in top right corner
drawSun (300, 70);
}

function createCrescentMoon () {
