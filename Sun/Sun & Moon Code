function drawCrescentMoon(){


}


function drawSun (x,y) {
fill(255,255,0)
noStroke()
circle(x,y,50)
  
let numRays= 12;
let radius= 25;
let rayLength= 20;
  
push();
translate(x,y);
  
for (let i= 0; i < numRays;i++){
let angle = TWO_PI / numRays * i;

let x1 = cos (angle) * radius;
let y1 = sin(angle) * radius;
let x2 = cos(angle) * (radius + rayLength);
let y2 = sin(angle) * (radius + rayLength);
  
triangle(x1,y1,x2,y2,x1+5* cos(angle + HALF_PI), y1 + 5* sin(angle + HALF_PI)) 
}

pop();
}
